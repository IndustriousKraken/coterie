# Coterie Staging Environment
# Copy this to /opt/coterie/.env and fill in the values

# Server Configuration
COTERIE_SERVER_HOST=127.0.0.1
COTERIE_SERVER_PORT=8080
COTERIE_SERVER_BASE_URL=https://coterie.yourdomain.com

# Database Configuration (absolute path for systemd)
COTERIE_DATABASE_URL=sqlite:///opt/coterie/data/coterie.db
COTERIE_DATABASE_MAX_CONNECTIONS=5

# Authentication
# Generate with: openssl rand -hex 32
COTERIE_AUTH_SESSION_SECRET=CHANGE_ME_GENERATE_A_RANDOM_STRING
COTERIE_AUTH_SESSION_DURATION_HOURS=24
COTERIE_AUTH_TOTP_ISSUER=Coterie

# Stripe Integration (disabled for staging)
COTERIE_STRIPE_ENABLED=false

# Discord Integration (disabled for staging)
COTERIE_INTEGRATIONS_DISCORD_ENABLED=false

# Unifi Integration (disabled for staging)
COTERIE_INTEGRATIONS_UNIFI_ENABLED=false
